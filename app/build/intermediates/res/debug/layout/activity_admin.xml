<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundgradient"
    tools:context=".Admin" >

        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSched"
            android:layout_below="@+id/btnSched"
            android:layout_marginTop="54dp"
            android:onClick="getFRCFMS"
            android:text="Retrieve Twitter" />

        <Button
            android:id="@+id/btnSched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="46dp"
            android:onClick="addSched"
            android:text="Add Schedule" />

         <Button
             android:id="@+id/btnExportMatches"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/btnTwitter"
             android:layout_below="@+id/btnTwitter"
             android:layout_marginTop="42dp"
             android:onClick="addSched"
             android:text="Export Matches" />

         <Button
             android:id="@+id/btnExportSched"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/btnExportMatches"
             android:layout_below="@+id/btnExportMatches"
             android:layout_marginTop="31dp"
             android:onClick="addSched"
             android:text="Export  Schedule" />

</RelativeLayout>
