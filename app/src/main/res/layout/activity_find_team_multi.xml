<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FindTeam" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp" >

        <ToggleButton
            android:id="@+id/toggleAutoMove"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Auto Move"
            android:textOn="Auto Move"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleAutoTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Auto Tote"
            android:textOn="Auto Tote"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleAutoBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Auto Bin"
            android:textOn="Auto Bin"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleAutoStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:textOff="Auto Stack"
            android:textOn="Auto Stack"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleFast"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Fast Stack"
            android:textOn="Fast Stack"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/toggleStackTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Stack Tote"
            android:textOn="Stack Tote"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleStackBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Stack Bin"
            android:textSize="10sp"
            android:textOn="Stack Bin" />

        <ToggleButton
            android:id="@+id/toggleDriver"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="10sp"
            android:textOff="Good Driver"
            android:textOn="Good Driver" />

        <ToggleButton
            android:id="@+id/toggleCarry"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="10sp"
            android:textOff="Carry Stack"
            android:textOn="Carry Stack" />

        <ToggleButton
            android:id="@+id/toggleNoodleBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="10sp"
            android:textOff="Noodl Bin"
            android:textOn="Noodl Bin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/toggleCoopTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="CoOp Tote"
            android:textOn="CoOp Tote"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleCoopStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="CoOp Stack"
            android:textOn="CoOp Stack"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleFloor"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Noodl Floor"
            android:textOn="Noodl Floor"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleDied"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textColor="@color/Red"
            android:textOff="Bad Robot"
            android:textOn="Bad Robot"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleThrow"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Noodl Throw"
            android:textOn="Noodl Throw"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/togglePick"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textOff="PICK Robot"
            android:textOn="PICK Robot"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleContrib"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Off Cntrb"
            android:textOn="Off Cntrb"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleOAuto"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="10sp"
            android:textOff="Off Auto"
            android:textOn="Off Auto" />

        <ToggleButton
            android:id="@+id/toggleOTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="10sp"
            android:textOff="Off Tote"
            android:textOn="Off Tote" />

        <ToggleButton
            android:id="@+id/toggleOBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Off Bins"
            android:textOn="Off Bins"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doRating"
        android:text="GO" />

    <ListView
        android:id="@+id/teamListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
