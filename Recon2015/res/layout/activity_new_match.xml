<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/backgroundgradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewMatch" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Match #"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Team #"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editMatch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.54"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTeam"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.69"
            android:ems="10"
            android:gravity="left"
            android:inputType="number" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:onClick="saveData"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/toteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:text="TextView" />

        <TextView
            android:id="@+id/binCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/noodleCount"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:onClick="countTote"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:onClick="countBin"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_gravity="left"
            android:onClick="countNoodle"
            android:src="@android:drawable/btn_star_big_on" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.24"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="left|top"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" >

        <ToggleButton
            android:id="@+id/toggleAutoMove"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="AMove"
            android:textOn="AMove"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="ATote"
            android:textOn="ATote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="ABin"
            android:textOn="ABin"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:textOff="AStack"
            android:textOn="AStack"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleFast"
            android:layout_width="60dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Fast"
            android:textOn="Fast" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ToggleButton
            android:id="@+id/toggleStackTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Stk Tote"
            android:textOn="Stk Tote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleStackBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Stk Bin"
            android:textOn="Stk Bin"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleCarry"
            android:layout_width="60dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Carry"
            android:textOn="Carry" />

        <ToggleButton
            android:id="@+id/toggleNoodleBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textOff="NoodBin"
            android:textOn="NoodBin"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleDriver"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Driver"
            android:textOn="Driver"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ToggleButton
            android:id="@+id/toggleCoopTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Co Tote"
            android:textOn="Co Tote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleCoopStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="CoStack"
            android:textOn="CoStack"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleFloor"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Nood Flr"
            android:textOn="Nood Flr"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleThrow"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Nood Air"
            android:textOn="Nood Air"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleDied"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textColor="@color/Red"
            android:textOff="Died"
            android:textOn="Died"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ToggleButton
            android:id="@+id/togglePick"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textAllCaps="false"
            android:textOff="PICK?"
            android:textOn="PICK"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>