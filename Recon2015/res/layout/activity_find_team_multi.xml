<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FindTeam" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp" >

        <ToggleButton
            android:id="@+id/toggleAutoMove"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="AMove"
            android:textOn="AMove"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="ATote"
            android:textOn="ATote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="ABin"
            android:textOn="ABin"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleAutoStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:textOff="AStack"
            android:textOn="AStack"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleFast"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Fast"
            android:textOn="Fast"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/toggleStackTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="StkTote"
            android:textOn="StkTote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleStackBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="StkBin"
            android:textSize="12sp"
            android:textOn="StkBin" />

        <ToggleButton
            android:id="@+id/toggleDriver"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="12sp"
            android:textOff="Driver"
            android:textOn="Driver" />

        <ToggleButton
            android:id="@+id/toggleCarry"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="12sp"
            android:textOff="Carry"
            android:textOn="Carry" />

        <ToggleButton
            android:id="@+id/toggleNoodleBin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="12sp"
            android:textOff="NDBin"
            android:textOn="NDBin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/toggleCoopTote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="CPTote"
            android:textOn="CPTote"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleCoopStack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="CPStk"
            android:textOn="CPStk"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleFloor"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="NDFloor"
            android:textOn="NDFloor"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleDied"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textColor="@color/Red"
            android:textOff="Died"
            android:textOn="Died"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleNoodleThrow"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Throw"
            android:textOn="Throw"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <ToggleButton
            android:id="@+id/togglePick"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textOff="PICK?"
            android:textOn="PICK"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleContrib"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Contrib"
            android:textOn="Contrib"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/toggleOAuto"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="12sp"
            android:textOff="OAuto"
            android:textOn="OAuto" />

        <ToggleButton
            android:id="@+id/toggleOTele"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textSize="12sp"
            android:textOff="OTele"
            android:textOn="OTele" />

        <ToggleButton
            android:id="@+id/toggleDTele"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textColor="@color/Red"
            android:textOff="DTele"
            android:textOn="DTele"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doRating"
        android:text="GO" />

    <ListView
        android:id="@+id/teamListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
