<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundgradient"
    tools:context=".Schedule" >

    <EditText
        android:id="@+id/red1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchnum"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:inputType="number"
        android:width="100dp" />

    <EditText
        android:id="@+id/blue1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/red1"
        android:layout_alignRight="@+id/matchnum"
        android:ems="10"
        android:inputType="number"
        android:width="120dp" />

    <EditText
        android:id="@+id/blue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/red2"
        android:layout_alignBottom="@+id/red2"
        android:layout_alignLeft="@+id/blue1"
        android:ems="10"
        android:inputType="number"
        android:width="100dp" />

    <EditText
        android:id="@+id/blue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blue2"
        android:layout_below="@+id/blue2"
        android:ems="10"
        android:inputType="number"
        android:width="100dp" />

    <EditText
        android:id="@+id/red2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/red1"
        android:layout_below="@+id/red1"
        android:ems="10"
        android:inputType="number"
        android:width="100dp" />

    <EditText
        android:id="@+id/red3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/blue3"
        android:layout_alignBottom="@+id/blue3"
        android:layout_alignLeft="@+id/red2"
        android:ems="10"
        android:inputType="number"
        android:width="100dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red3"
        android:layout_centerHorizontal="true"
        android:onClick="saveData"
        android:layout_marginTop="38dp"
        android:text="Save" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blue1"
        android:layout_alignLeft="@+id/red1"
        android:layout_alignRight="@+id/red1"
        android:text="RED"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/blue1"
        android:text="BLUE"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/matchnum"
        android:layout_alignBottom="@+id/matchnum"
        android:layout_alignRight="@+id/textView2"
        android:text="Match#"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/matchnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSave"
        android:ems="10"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/matchnum"
        android:layout_below="@+id/matchnum" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Practice" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Qualifying" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elimination" />
    </RadioGroup>

</RelativeLayout>
